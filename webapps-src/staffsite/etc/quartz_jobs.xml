<?xml version="1.0" encoding="UTF-8"?>
<quartz xmlns="http://www.opensymphony.com/quartz/JobSchedulingData"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        overwrite-existing-jobs="true">
    <job>
        <job-detail>
            <name>AccountBalanceUpdater</name>
            <group>STAFFSITE</group>
            <description>Updates account balance on MPD page</description>
            <job-class>org.alt60m.staffSite.jobs.AccountBalanceUpdaterJob</job-class>
            <job-data-map allows-transient-data="false">
                <entry>
                    <key>verbose</key>
                    <value>true</value>
                </entry>
            </job-data-map>
        </job-detail>
        <trigger>
            <cron>
                <name>ABUTrigger</name>
                <group>STAFFSITE_TRIGGERS</group>
                <job-name>AccountBalanceUpdater</job-name>
                <job-group>STAFFSITE</job-group>
                <!-- 5:45am week days -->
                <cron-expression>0 45 5 ? * MON-FRI</cron-expression>
            </cron>
        </trigger>
    </job>
    
    <job>
        <job-detail>
            <name>ApplyStaffChanges</name>
            <group>STAFFSITE</group>
            <description>Apply staff change requests that have been authorized</description>
            <job-class>org.alt60m.ministry.jobs.ApplyStaffChangesJob</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>ASCTrigger</name>
                <group>STAFFSITE_TRIGGERS</group>
                <job-name>ApplyStaffChanges</job-name>
                <job-group>STAFFSITE</job-group>
                <!-- 1am week days -->
                <cron-expression>0 0 1 ? * MON-FRI</cron-expression>
            </cron>
        </trigger>
    </job>
    
    <job>
        <job-detail>
            <name>StaffUpdater</name>
            <group>STAFFSITE</group>
            <description>Update staff information from ITG's Oracle db</description>
            <job-class>org.alt60m.ministry.jobs.StaffUpdaterJob</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>SUTrigger</name>
                <group>STAFFSITE_TRIGGERS</group>
                <job-name>StaffUpdater</job-name>
                <job-group>STAFFSITE</job-group>
                <!-- 5:15am week days -->
                <cron-expression>0 15 5 ? * MON-FRI</cron-expression>
            </cron>
        </trigger>
    </job>
    
    <job>
        <job-detail>
            <name>WsnAccountBalanceUpdater</name>
            <group>STAFFSITE</group>
            <description>Update wsn student's account balances</description>
            <job-class>org.alt60m.wsn.sp.jobs.WsnAccountBalanceUpdaterJob</job-class>
        </job-detail>
        <trigger>
            <cron>
                <name>WSNABUTrigger</name>
                <group>STAFFSITE_TRIGGERS</group>
                <job-name>StaffUpdater</job-name>
                <job-group>STAFFSITE</job-group>
                <!-- 6:15am weekdays -->
                <cron-expression>0 15 6 ? * MON-FRI</cron-expression>
            </cron>
        </trigger>
    </job>
</quartz>
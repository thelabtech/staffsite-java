							<div class="field">
                            <label>Strategy:</label>
                            <%=strategy.display()%>                           
                        	</div>
							<div class="field">
                            <label>Team Website:</label>
                            <a href="<%=info.get("url")%>"><%=info.get("url")%></a>                         

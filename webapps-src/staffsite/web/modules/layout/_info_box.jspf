                            <label>Mobile Phone:</label>
                            <%=info.get("cellphone")%>                            
                        	</div>
							<div class="field">
                            <label>Home Phone:</label>
                            <%=info.get("homephone")%>                            
                        	</div>
		
						<%}else{ %>	
							<div class="field">
                            <label>Phone:</label>
                            <%=info.get("phone")%>                            
                        	</div>
						<%} %>
							<div class="field">
                            <label>Email:</label>
                            <%=info.get("email")%>                           
                        	</div>

						<%if(module.equals("campus")||module.equals("location")){%>
							<div class="field">
                            <label>Enrollment:</label>
                            <%=info.get("enrollment")%>                            
                        	</div>
							<div class="field">
                            <label>Semester?</label>
                            <%= (((Boolean) info.get("IsSemester")).booleanValue()) ?"Yes":"No"%>                            

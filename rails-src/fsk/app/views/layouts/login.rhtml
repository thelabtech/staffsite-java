<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
  <title>Cru Commons</title>
	<%= javascript_include_tag :defaults %>
	<link rel="shortcut icon" href="/images/favicon.ico" />
</head>
<body>
  <div id="container">
    <div id="header">
      <h1 class="logo"><span>Cru Commons</span></h1>
	    <ul id="nav">
				<li id="homenav"><%= link_to "Login", :controller => "login", :action => "login" %></li>	
			</ul>
		</div>
		<div id="page">
      <div id = "maincolumn">
        <div class="fullwidth">
    		<h1><span><%= @page_title || "Login to Cru Commons" %></span></h1>
        <p class="notice"><%= flash[:notice] %></p>
        <%= @content_for_layout %>    
        </div>
      </div>
    </div>
	</div>
</body>
</html>
<?xml version="1.0" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
	<!-- Reference levels (in order): OFF, FATAL, ERROR, WARN, INFO, DEBUG and ALL. -->

	<appender name="StaffsiteAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/staffsite"/>
		<param name="DatePattern" value="'-'yyyy-MM-dd'.log'"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p (%x) %c{1}: %m%n"/>
		</layout>      
	</appender>

	<category name="com.kenburcham">
		<priority value="warn" />
	</category>

	<category name="org.alt60m"> 
		<priority value="debug" />
	</category>

	<root>
		<priority value ="info" />
		<appender-ref ref="StaffsiteAppender" />  
	</root>

</log4j:configuration>

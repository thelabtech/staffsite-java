<?xml version="1.0" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
	<!-- Reference levels (in order): OFF, FATAL, ERROR, WARN, INFO, DEBUG and ALL. -->

	<!-- Eventually, use only this: -->
	<appender name="StaffsiteAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/staffsite.log"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p (%x) %c{1}: %m%n"/>
		</layout>      
	</appender>


	<!-- also dump to stdout, mostly for easy reading in eclipse -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %-25.25c{1} %m%n"/>
		</layout>      
	</appender>

	<category name="com.kenburcham">
		<priority value="warn" />
	</category>

	<category name="com.kenburcham.framework.dbio">
		<priority value="info" /> 
	</category>


	<category name="com.kenburcham.framework.dbio.DBIOFactory">
		<priority value="warn" /> 
	</category>

	<category name="org.appache.commons.httpclient">
		<priority value="info" /> 
	</category>


	<category name="org.alt60m"> 
		<priority value="debug" />
	</category>


	<root>
		<priority value ="info" />
		<appender-ref ref="STDOUT" />  
		<appender-ref ref="StaffsiteAppender" />  
	</root>

</log4j:configuration>

<% @page_title = "Campus Crusade for Christ - User Account Password Management" %>
<%= form_tag({:action => :change_password}) %>
<% if flash[:notice] %>
    <%= flash[:notice]+"<br />" %>
<% end %>
Create a new password
<br>
New Password: <%= password_field "auth", "plain_password" %><br />
Confirm Password: <%= password_field "auth", "plain_password_confirmation" %><br/>
<%= submit_tag "Save new password" %>
<input type="hidden" name="user_hash" value="<%=@user_hash%>" />
<%= hidden_field "auth", "username" %>
<%= end_form_tag %>
